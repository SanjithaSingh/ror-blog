<%= form_for([@post, @post.comments.build]) do |form| %>

<div class="field form-group">
    <%= form.label :name %>
    <%= form.text_field :name,class:"form-control" %>
</div>

<div class="field form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class:"form-control"%>
</div>
<div class="actions">
    <%= form.submit class:"btn btn-success" %>
</div>
<% end %>