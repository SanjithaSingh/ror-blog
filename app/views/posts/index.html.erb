<h1>Posts</h1>

<%= link_to '+ Create Post', new_post_path, class:"btn btn-success mb-3 ml-auto"%>
<% @posts.each do |post| %>
<div class="card p-2 m-2 mb-3">
    <%= link_to post.title, post, class:"h5 card-title" %>
    <h6 class="card-subtitle mb-2 text-muted">
        Posted by: <%= post.user_id %>
    </h6>
    <div class="card-body">
        <p class="card-text">
            <%= post.body %>
        </p>
        <% if post.user == current_user%>
        <%= link_to 'Edit', edit_post_path(post), class:" btn btn-warning" %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-danger"%>
        <% end %>
    </div>
</div>



<% end %>

<br>